                    if (split1!=null) var split2 = split1[1].split('is');
                    if (split2!=null) var invoice = split2[0];
                    if (invoice!=null) arrParam['custparam_invoice'] = invoice;
                } catch(err){
//							nlapiLogExecution('debug','issue splitting memo');
                    arrParam['custparam_invoice'] = ''
